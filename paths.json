{
  "clean": {
    "src": ["./dist"]
  },
  "connect": {
    "root": ["./dist"]
  },
  "jshint": {
    "src": [
      "./gulpfile.js",
      "./app/js/src/**/*.js",
      "./app/js/tests/**/*.js"
    ]
  },
  "jsApp": {
    "watch": ["./app/js/src/**/*.js"],
    "src": ["./app/js/src/app.js"],
    "dest": "./dist/js",
    "aliases": {
      "constants": "./helpers/constants"
    }
  },
  "jsVendor": {
    "watch": ["./app/js/vendor/*.js"],
    "src": "./app/js/src/vendor.js",
    "dest": "./dist/js",
    "require": {
      "$": "../../../bower_components/jquery/dist/jquery.js"
    }
  },
  "jsVendorConcat": {
    "src": "./dist/js/vendor.js",
    "name": "vendor.js",
    "dest": "./dist/js"
  },
  "less": {
    "watch": ["./app/less/**/*.less"],
    "src": ["./app/less/**/*.less", "!./app/less/**/_*.less"],
    "dest": "./dist/stylesheets"
  },
  "html": {
    "src": ["./app/*.html"],
    "dest": "./dist"
  },
  "htmlMin": {
    "src": ["./dist/*.html"],
    "dest": "./dist"
  },
  "images": {
    "src": ["./app/images/**/*"],
    "dest": "./dist/images"
  }
}