{
  "clean": {
    "src": ["./dist", "./tmp"]
  },
  "connect": {
    "root": ["./dist"]
  },
  "jshint": {
    "src": [
      "./gulpfile.js",
      "./app/src/**/*.js"
    ]
  },
  "jsApp": {
    "watch": ["./app/src/**/*.js", "./app/src/**/*.hbs", "./app/lang/*.json"]
  },
  "jsTraceur": {
    "src": ["./app/src/**/*.js"],
    "dest": "./tmp/js"
  },
  "jsCopyDeps": {
    "src": ["./app/src/**/*.hbs", "./app/lang/*.json"],
    "hbsDest": "./tmp/js",
    "jsonDest": "./tmp/lang"
  },
  "jsBrowserify": {
    "src": ["./tmp/js/index.js"],
    "dest": "./dist/js"
  },
  "jsVendor": {
    "src": [
      "./bower_components/jquery/dist/jquery.js",
      "./bower_components/underscore/underscore.js",
      "./bower_components/backbone/backbone.js",
      "./bower_components/backbone.controller/backbone.controller.js",
      "./bower_components/backbone.stickit/backbone.stickit.js",
      "./bower_components/marionette/lib/backbone.marionette.js",
      "./bower_components/polyglot/build/polyglot.js",
      "./bower_components/moment/moment.js",
      "./bower_components/traceur-runtime/traceur-runtime.js"
    ],
    "name": "vendor.js",
    "dest": "./dist/js"
  },
  "lessCommon": {
    "watch": ["./app/less/**/*.less"],
    "src": ["./app/less/**/*.less", "!./app/less/**/_*.less"],
    "dest": "./dist/stylesheets"
  },
  "lessApp": {
    "src": ["./app/src/**/*.less"],
    "name": "app.css",
    "dest": "./dist/stylesheets"
  },
  "html": {
    "src": ["./app/*.html"],
    "dest": "./dist"
  },
  "htmlMin": {
    "src": ["./dist/*.html"],
    "dest": "./dist"
  },
  "images": {
    "src": ["./app/images/**/*"],
    "dest": "./dist/images"
  },
  "sprites": {
    "src": ["./app/sprites/*.png"],
    "imgMask": "*.png",
    "name": "sprite",
    "prefix": "icon",
    "style": "_sprite.less",
    "cssPath": "../images",
    "processor": "less",
    "retina": true,
    "spriteDest": "./dist/images",
    "styleDest": "./app/less"
  },
  "server": {
    "port": 9001
  }
}
