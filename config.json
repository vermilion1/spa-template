{
  "clean": {
    "src": ["./dist"]
  },
  "connect": {
    "root": ["./dist"]
  },
  "jshint": {
    "src": [
      "./gulpfile.js",
      "./app/js/src/**/*.js",
      "./app/js/tests/**/*.js"
    ]
  },
  "jsApp": {
    "watch": ["./app/js/src/**/*.js"],
    "src": ["./app/js/src/index.js"],
    "dest": "./dist/js",
    "expose": {
      "basePath": "./app/js/src",
      "directories": ["lib"],
      "files": {
        "constants": "./helpers/constants",
        "mediator": "./helpers/mediator",
        "utils": "./helpers/utils"
      }
    }
  },
  "jsVendor": {
    "watch": ["./app/js/vendor/*.js", "./bower_components/**/*.js"],
    "src": "./app/js/src/vendor.js",
    "dest": "./dist/js",
    "require": {
      "jquery": "../../../bower_components/jquery/dist/jquery.js",
      "underscore": "../../../bower_components/underscore/underscore.js",
      "backbone": "../../../bower_components/backbone/backbone.js",
      "controller": "../../../bower_components/backbone.controller/backbone.controller.js",
      "marionette": "../../../bower_components/marionette/lib/backbone.marionette.js"
    }
  },
  "jsVendorConcat": {
    "src": "./dist/js/vendor.js",
    "name": "vendor.js",
    "dest": "./dist/js"
  },
  "less": {
    "watch": ["./app/less/**/*.less"],
    "src": ["./app/less/**/*.less", "!./app/less/**/_*.less"],
    "dest": "./dist/stylesheets"
  },
  "html": {
    "src": ["./app/*.html"],
    "dest": "./dist"
  },
  "htmlMin": {
    "src": ["./dist/*.html"],
    "dest": "./dist"
  },
  "images": {
    "src": ["./app/images/**/*"],
    "dest": "./dist/images"
  },
  "server": {
    "port": 9001
  }
}
